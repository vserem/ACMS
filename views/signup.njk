{% extends "formsLayout.html" %}
{% block form %}
  <form class="bg-white shadow p-3  col-12 col-sm-12 col-md-4 rounded" action="/auth/signup" method="post">
      <h2 class="text-center p-2 p-md-3 fw-bolder fs-md-1 fs-4 text-dark">Create Account</h2>
      {% if messages.error %}
      <div class="alert alert-danger text-center">
        {{ messages.error }}
      </div>
      {% endif %}

      {% if messages.success %}
      <div class="alert alert-success text-center">
        {{ messages.success }}
      </div>
      {% endif %}

      <div class="py-3">
        <input type="email" name="email" class="form-control w-100 shadow-none " placeholder="Email Id">
      </div>
      <div class="py-3">
        <input type="password" name="password" class="form-control w-100 shadow-none" placeholder="Password">
      </div>
      <div class="p-2">
        <p>Already have an account?<a class="text-decoration-none px-2" href="/auth/signin">SignIn</a></p>
      </div>
      <div class="py-3 py-md-5 ">
        <button type="s
            " class="btn btn-dark w-100 fw-bold">SignUp</button>
      </div>
    </form>
{% endblock %}